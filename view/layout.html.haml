!!! 5
%html
  %head
    %title= "Disjoint - #{title}"
    %link{rel: "stylesheet", href: "/common.css"}
    %script{src: '/jquery-1.4.2.min.js'}
    %script{src: '/maxchar.js'}
    %script{src: '/base64.js'}
    %script{src: '/canvas2image.js'}
    %script{src: '/disjoint.js'}
    :javascript
      $(document).ready(function(){
        new document.Disjoint($('#paper'));
        $('.write textarea').maxChar(86);
      });
    :javascript
      var rpxJsHost = (("https:" == document.location.protocol) ? "https://" : "http://static.");
      document.write(unescape("%3Cscript src='" + rpxJsHost + "rpxnow.com/js/lib/rpx.js' type='text/javascript'%3E%3C/script%3E"));
    :javascript
      RPXNOW.overlay = true;
      RPXNOW.language_preference = 'en';
  %body
    %h1 Disjoint
    %h2= title
    %nav
      %a.rpxnow{onclick: "return false;", href: "https://disjoint.rpxnow.com/openid/v2/signin?token_url=http%3A%2F%2Fjupiter.nrs.us%2Frpx"}
        Sign In
    = content
